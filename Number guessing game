import random
guessestaken = 0
print("Hello what is your name:")
myName = input()
number = random.randint(1,30)
print("well, "+myName+" I am guessing a number between 1 to 30")
for guessestaken in range (6):
    print("Take a guess")
    guess = int(input())

    if guess < number:
        print("your guess is too low")
    if guess > number:
        print("your guess is higher")
    if guess == number:
        break

if guess == number:
    guessestaken = str(guessestaken + 1)
    print("You have correctly guessed the number.The number of guesses you took is " + guessestaken+ ".")

if guess != number:
    number = str(guessestaken + 1)
    print("You have exceeded the number of guesses.The number i taught was " + number + ".")
